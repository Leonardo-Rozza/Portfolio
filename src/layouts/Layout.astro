---
import '../styles/global.css'; 
import Header from '../components/astro/Header.astro';
import SocialLinks from '../components/astro/SocialLinks.astro';
import Navigation from '../components/react/Navigation.tsx';

interface Props {
	 title: string;
   description: string;
}
const { title = 'Mi Portafolio Profesional' } = Astro.props;
const currentYear = new Date().getFullYear(); 

const navItems = [
  { href: '#sobre-mi', label: 'Sobre mí' },
  { href: '#proyectos', label: 'Proyectos' },
  { href: '#experiencia', label: 'Experiencia' },
];
---
<!doctype html>
<html lang="es" class="dark scroll-smooth"> 
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Portafolio profesional de Leonardo Rozza - Desarrollador de Software" />
	<meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/favicon-lr-dark.ico" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="bg-slate-900 leading-relaxed text-slate-400 antialiased selection:bg-teal-300 selection:text-teal-900 font-sans">
	<div class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 md:px-12 md:py-20 lg:px-24 lg:py-0 lg:flex lg:justify-between lg:gap-4">
		
		<aside class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24">
			<div>
				<Header
          nombre="Leonardo Rozza"
          titulo="Desarrollador de Software"
          subtitulo= "Desarrollo soluciones robustas y escalables, con foco en el backend y las buenas prácticas."
        />
				<Navigation client:visible navItems={navItems} /> 
			</div>
			<SocialLinks />
		</aside>
		<main id="content" class="pt-24 lg:w-1/2 lg:py-24">
			<slot /> 
      <footer class="max-w-md pb-16 text-sm text-slate-500 sm:pb-0 mt-20">
         <p>
           Construido con <a href="https://astro.build/" class="font-medium text-slate-400 hover:text-teal-300 focus-visible:text-teal-300 transition-colors" target="_blank" rel="noreferrer noopener" aria-label="Astro (opens in a new tab)">Astro</a>, <a href="https://react.dev/" class="font-medium text-slate-400 hover:text-teal-300 focus-visible:text-teal-300 transition-colors" target="_blank" rel="noreferrer noopener" aria-label="React (opens in a new tab)">React</a> y <a href="https://tailwindcss.com/" class="font-medium text-slate-400 hover:text-teal-300 focus-visible:text-teal-300 transition-colors" target="_blank" rel="noreferrer noopener" aria-label="Tailwind CSS (opens in a new tab)">Tailwind CSS</a>. 
           © {currentYear} Leonardo Rozza.
         </p>
       </footer>
		</main>
	</div>
</body>
</html>
